<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<!--公司信息认证-->
    <RelativeLayout
        android:id="@+id/lineart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <Button
            android:id="@+id/tv_huitui"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="返回"
            android:textColor="@color/white"
            android:background="@drawable/bg_shapess"/>
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:textColor="@color/back"
            android:text="公司信息认证"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/lineart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/lin_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="@dimen/dp_12"
                    android:textColor="@color/back"
                    android:text="您好，您正在进行公司信息认证，请根据据示完成认证吧！"/>
                <View
                    android:id="@+id/school_view"
                    android:layout_below="@id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back">
                </View>
                <RelativeLayout
                    android:id="@+id/school_relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司名称："
                        android:textColor="@color/back"
                        android:textSize="@dimen/dp_14"/>
                    <EditText
                        android:id="@+id/tv_com_name"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_15"
                        android:hint="请输入公司名称"
                        style="?android:attr/textViewStyle"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dp_99"
                        android:textSize="@dimen/dp_14"/>
                </RelativeLayout>
                <View
                    android:id="@+id/school_view1"
                    android:layout_below="@id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back">
                </View>
                <RelativeLayout
                    android:id="@+id/school_relative2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所处岗位："
                        android:textColor="@color/back"
                        android:textSize="@dimen/dp_14"/>
                    <EditText
                        android:id="@+id/tv_post"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_15"
                        android:hint="请输入所处岗位"
                        style="?android:attr/textViewStyle"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dp_99"
                        android:textSize="@dimen/dp_14"/>
                </RelativeLayout>
                <View
                    android:id="@+id/school_view2"
                    android:layout_below="@id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back">
                </View>
                <RelativeLayout
                    android:id="@+id/school_relative3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业邮箱："
                        android:textColor="@color/back"
                        android:textSize="@dimen/dp_14"/>
                    <EditText
                        android:id="@+id/tv_emile"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_15"
                        android:hint="输入邮箱地址"
                        android:inputType="textEmailAddress"
                        style="?android:attr/textViewStyle"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dp_99"
                        android:textSize="@dimen/dp_14"/>
                </RelativeLayout>
                <View
                    android:id="@+id/school_view3"
                    android:layout_below="@id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back">
                </View>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rv_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin_school"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/back"
                    android:text="请上传您的工牌人相面照片"
                    android:textSize="@dimen/dp_12" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/im_com_person"
                android:layout_width="@dimen/dp_219"
                android:layout_height="@dimen/dp_159"
                android:layout_below="@id/rv_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/addphotooen" />

            <Button
                android:id="@+id/bt_com_rz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_com_person"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/present_record_shape"
                android:text="提交认证"
                android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
