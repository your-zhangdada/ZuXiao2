<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.mine.activity.MyWalletActivity">
    <LinearLayout
        android:id="@+id/liner_qianbao"
        android:orientation="vertical"
        android:background="@color/xieyi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <LinearLayout
                android:id="@+id/im_back"
                android:gravity="center"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@mipmap/back_left_blank" />
            </LinearLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的钱包"
                android:gravity="center"
                android:textColor="@color/back"
                android:textSize="@dimen/dp_18" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="我的余额（元）"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:id="@+id/tv_yue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3233.32"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_40"/>

            <Button
                android:id="@+id/btn_tixian"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_27"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_shapes"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/back"
                android:textSize="@dimen/dp_16" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_zuoritixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨日提现金额（元）： - 320.20"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_16"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relat_jine"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="191dp"
        android:background="@color/white"
        android:layout_marginRight="@dimen/dp_12">
        <ImageView
            android:id="@+id/im_yajin"
            android:src="@mipmap/my_order"
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_31" />
        <TextView
            android:id="@+id/tv_mianya"
            android:layout_toRightOf="@+id/im_yajin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_31"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_15"
            android:text="免押额度：￥1233.00"
            android:textColor="@color/back"
            />
        <TextView
            android:id="@+id/tv_tiaozheng"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15"
            android:text="调整额度     "
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:drawableRight="@mipmap/back_right"
            android:textColor="@color/app_same"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/relat_jine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我的银行卡"
                android:textColor="@color/back"
                android:textSize="@dimen/dp_14"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/my_bank_card"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_50"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/back_right"
                    android:layout_marginRight="@dimen/dp_24"
                   />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="@color/huise"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="到账记录"
                android:textColor="@color/back"
                android:textSize="@dimen/dp_14"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/my_account_record"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_50"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/back_right"
                    android:layout_marginRight="@dimen/dp_24"
                    />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="@color/huise"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="提现记录"
                android:textColor="@color/back"
                android:textSize="@dimen/dp_14"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/my_present_record"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_50"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_15"
                    android:src="@mipmap/back_right"
                    android:layout_marginRight="@dimen/dp_24"
                    />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_1"
            android:background="@color/huise"/>
    </LinearLayout>
</RelativeLayout>