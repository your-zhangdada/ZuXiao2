<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/im_liji_iphonex"
               android:layout_width="@dimen/dp_97"
               android:layout_height="@dimen/dp_92"
               android:src="@mipmap/back"
               android:layout_marginTop="@dimen/dp_13"/>

           <TextView
               android:id="@+id/tv_liji_price"
               android:layout_width="@dimen/dp_50"
               android:layout_height="@dimen/dp_15"
               android:textSize="@dimen/dp_14"
               android:text="¥3.16"
               android:layout_marginTop="@dimen/dp_35"
               android:layout_marginLeft="@dimen/dp_14"
               android:layout_toRightOf="@+id/im_liji_iphonex"/>
           <TextView
               android:layout_width="@dimen/dp_50"
               android:layout_height="@dimen/dp_15"
               android:textSize="@dimen/dp_14"
               android:text="／天"
               android:layout_marginTop="@dimen/dp_39"
               android:layout_marginLeft="@dimen/dp_4"
               android:layout_toRightOf="@+id/tv_liji_price"/>
           <TextView
               android:id="@+id/tv_liji_yj"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="设备押金：¥3000.00"
               android:textSize="@dimen/dp_11"
               android:layout_below="@+id/tv_liji_price"
               android:layout_toRightOf="@+id/im_liji_iphonex"
               android:layout_marginTop="@dimen/dp_14"
               android:layout_marginLeft="@dimen/dp_23"/>
           <TextView
               android:id="@+id/tv_liji_zj"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="总租金：¥260.00"
               android:textSize="@dimen/dp_11"
               android:layout_below="@+id/tv_liji_yj"
               android:layout_toRightOf="@+id/im_liji_iphonex"
               android:layout_marginTop="@dimen/dp_7"
               android:layout_marginLeft="@dimen/dp_23"/>


           <TextView
               android:id="@+id/tv_liji_guanbi"
               android:layout_width="@dimen/dp_15"
               android:layout_height="@dimen/dp_15"
               android:layout_alignParentRight="true"
               android:text="X"
               android:layout_marginTop="@dimen/dp_15"
               android:layout_marginRight="@dimen/dp_15"/>

           <View
               android:id="@+id/views"
               android:layout_below="@+id/tv_liji_zj"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_0_1"
               android:background="@color/back"
               android:layout_marginTop="@dimen/dp_19"></View>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/views"
               android:layout_marginTop="@dimen/dp_11"
               android:text="选择配置" />

           <RelativeLayout
               android:id="@+id/linear"
               android:layout_marginLeft="@dimen/dp_2"
               android:layout_below="@+id/views"
               android:layout_marginTop="@dimen/dp_32"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:descendantFocusability="blocksDescendants">
               <android.support.v7.widget.RecyclerView
                   android:id="@+id/pop_recycler"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
           </RelativeLayout>


           <LinearLayout
               android:id="@+id/linear_zuday"
               android:layout_below="@+id/linear"
               android:layout_marginTop="@dimen/dp_21"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="租期"/>
               <TextView
                   android:id="@+id/tv_day"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="／天"
                   android:layout_marginLeft="@dimen/dp_4"/>
               <TextView
                   android:id="@+id/tv_daynumb"
                   android:layout_width="@dimen/dp_40"
                   android:layout_height="@dimen/dp_20"
                   android:text="12"
                   android:gravity="center"
                   android:layout_marginLeft="@dimen/dp_194"/>
               <TextView
                   android:id="@+id/tv_day_cont"
                   android:layout_marginLeft="@dimen/dp_14"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=">"/>
           </LinearLayout>

           <LinearLayout
               android:id="@+id/linears"
               android:layout_below="@+id/linear_zuday"
               android:layout_marginTop="@dimen/dp_21"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="数量"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="／台"
                   android:layout_marginLeft="@dimen/dp_4"/>
               <LinearLayout
                   android:layout_width="@dimen/dp_70"
                   android:layout_height="@dimen/dp_20"
                   android:layout_marginLeft="@dimen/dp_194">
                   <TextView
                       android:id="@+id/tv_jian"
                       android:layout_width="@dimen/dp_0"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="➖"
                       android:gravity="center"
                       android:textSize="@dimen/dp_13"/>
                   <TextView
                       android:id="@+id/tv_taishu"
                       android:gravity="center"
                       android:layout_width="@dimen/dp_0"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="1"
                       android:textSize="@dimen/dp_13"/>
                   <TextView
                       android:id="@+id/tv_jia"
                       android:layout_width="@dimen/dp_0"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/dp_13"
                       android:text="➕"/>
               </LinearLayout>

           </LinearLayout>
           <TextView
               android:id="@+id/tv_myj"
               android:layout_below="@+id/linears"
               android:layout_marginTop="@dimen/dp_22"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/dp_14"
               android:text="可用免押额度：￥2500.00"/>

           <TextView
               android:id="@+id/tv_fuwu"
               android:layout_below="@+id/tv_myj"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dp_24"
               android:text="服务：免费维修，专业团队随时待命，24小时客服电话，企业免押金"
               android:textSize="@dimen/dp_11"/>
           <Button
               android:id="@+id/btn_queding"
               android:layout_below="@+id/tv_fuwu"
               android:layout_width="match_parent"
               android:layout_marginTop="@dimen/dp_12"
               android:layout_marginRight="@dimen/dp_14"
               android:layout_height="@dimen/dp_40"
               android:text="确定"
               android:layout_marginBottom="@dimen/dp_10"/>
       </RelativeLayout>
   </ScrollView>
</LinearLayout>
