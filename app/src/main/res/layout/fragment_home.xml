                        android:layout_below="@id/tv_iphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/view_back"
                        android:text="鎴戝湪杩欓噷绛変綘鏉?"
                       android:textSize="@dimen/dp_8"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativ_rz"
