<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.fragment.HomeFragment">

    <LinearLayout
        android:id="@+id/l"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_14"
                android:text="北京"
                android:textSize="@dimen/dp_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@mipmap/sanjiao" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="@dimen/dp_242"
            android:layout_height="@dimen/dp_24">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_24"
                android:text="@string/app_name"
                android:textColor="@color/titleThem"
                android:layout_gravity="center"
                />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/message" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/l">

        <RelativeLayout
            android:id="@+id/rv_ss"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.youth.banner.Banner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_208" />


            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_below="@id/banner"
                android:id="@+id/erzhu_relat"
                android:layout_width="@dimen/dp_144"
                android:layout_height="@dimen/dp_173">
                <RelativeLayout
                    android:layout_width="@dimen/dp_63"
                    android:layout_height="@dimen/dp_23"
                    android:layout_marginTop="@dimen/dp_23"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_67"
                    android:layout_marginBottom="@dimen/dp_127">
                    <TextView
                        android:id="@+id/tv_iphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_10"
                        android:text="iPhone X "/>
                    <TextView
