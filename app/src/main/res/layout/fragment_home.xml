                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginBottom="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginRight="@dimen/dp_117"
                    android:src="@drawable/ic_launcher_background"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/dp_83"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_28"
                    android:layout_marginLeft="@dimen/dp_86"
                    android:layout_marginRight="@dimen/dp_16">

                    <TextView
                        android:id="@+id/tv_nkoen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_8"
                        android:text="灏煎悍D5600"
                        android:textColor="@color/back"/>
                    <TextView
                        android:id="@+id/tv_nktwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_9"
                        android:text="鏃呮父蹇呭 灞曚細蹇呭"
