                    android:layout_width="@dimen/dp_31"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_103"
                    android:layout_marginBottom="@dimen/dp_151"
                    android:layout_marginRight="@dimen/dp_11">
                    <TextView
                        android:id="@+id/tv_rz"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_10"
                        android:textSize="@dimen/dp_8"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_marginBottom="@dimen/dp_6"
                        android:text="鐑"
                        android:textColor="@color/white"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/im_iphone"
                    android:src="@mipmap/order_hand"
                    android:layout_marginTop="@dimen/dp_57"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_width="@dimen/dp_116"
                    android:layout_height="@dimen/dp_116"
                    android:layout_marginRight="@dimen/dp_13"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@id/banner"
                android:id="@+id/macBook"
                android:layout_width="@dimen/dp_185"
                android:layout_height="@dimen/dp_83"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_85"
                    android:layout_marginTop="@dimen/dp_28"
                    android:layout_marginBottom="@dimen/dp_31"
                    android:layout_width="@dimen/dp_82"
                    android:layout_height="@dimen/dp_24"
                    >
                    <TextView
                        android:id="@+id/tv_Macbook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_10"
                        android:text="Macbook"/>
                    <TextView
                        android:id="@+id/tv_xinping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_8"
                        android:textColor="@color/view_back"
