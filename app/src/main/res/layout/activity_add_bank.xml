<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.mine.activity.AddBankActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50">
    <ImageView
        android:id="@+id/im_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@mipmap/back_left_blank" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="添加银行卡"
        android:textColor="@color/back"
        android:textSize="@dimen/dp_18" />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/huise"/>
    <TextView
        android:id="@+id/tv_bangka"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_55"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_22"
        android:textColor="@color/huise"
        android:text="请绑定您的银行卡"
        android:textSize="@dimen/dp_14"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/huise"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="持卡人姓名："
            android:textSize="@dimen/dp_14"
            android:gravity="center"/>
        <TextView
            android:hint="输入持卡人姓名"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/huise"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="银行卡卡号："
            android:textSize="@dimen/dp_14"
            android:gravity="center"/>
        <TextView
            android:hint="输入卡号"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/huise"/>
    <Button
        android:id="@+id/btn_xiayibu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/app_same"
        android:text="下一步"
        android:textColor="@color/white"/>
</LinearLayout>