<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--添加地址-->

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_50">
       <LinearLayout
           android:id="@+id/lin_back"
           android:gravity="center_vertical"
           android:layout_width="@dimen/dp_50"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/im_back"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="@dimen/dp_20"
               android:src="@mipmap/back_left_blank" />
       </LinearLayout>


       <TextView
           android:id="@+id/title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:text="收货地址"
           android:textColor="@color/back"
           android:textSize="@dimen/dp_18" />
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/tv_person"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:text="收货人："
           />
        <EditText
            android:id="@+id/et_sh_name"
            android:layout_toRightOf="@+id/tv_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:hint="输入收货人："/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:text="手机号："
            />
        <EditText
            android:id="@+id/et_phone"
            android:layout_toRightOf="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:hint="输入手机号："/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/add_dizhi_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_adddz"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:text="所在地区："
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_xz_dz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/back"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
          android:text=">"
            />

    </RelativeLayout>
    <EditText
        android:id="@+id/et_xh_address"
        android:layout_below="@+id/add_dizhi_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:hint="详细地址："
        android:textSize="@dimen/dp_14"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/huise"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:text="默认地址"/>
        <Switch
            android:id="@+id/sw_mr_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentRight="true" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_sanchu_dz"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:text="删除地址"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@color/titleThem"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/dp_10"/>
</LinearLayout>
