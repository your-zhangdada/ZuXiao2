<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--添加地址-->

    <include
        android:id="@+id/inv_f"
        layout="@layout/common_top_white_view" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/tv_person"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:text="收货人："
           />
        <EditText
            android:id="@+id/et_sh_name"
            android:layout_toRightOf="@+id/tv_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:hint="输入收货人："/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:text="手机号："
            />
        <EditText
            android:id="@+id/et_phone"
            android:layout_toRightOf="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:hint="输入手机号："/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_adddz"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:text="所在地区："
            />

        <TextView
            android:id="@+id/tv_xz_dz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="294dp"
            android:layout_toRightOf="@+id/tv_adddz"
            android:text=">" />
        <EditText
            android:id="@+id/et_xh_address"
            android:layout_below="@+id/tv_xz_dz"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:hint="详细地址："
            android:textSize="@dimen/dp_14"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/huise"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:text="默认地址"/>
        <Switch
            android:id="@+id/sw_mr_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentRight="true" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_sanchu_dz"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:text="删除地址"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@color/titleThem"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/dp_10"/>
</LinearLayout>
