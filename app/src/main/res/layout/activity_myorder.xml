<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/order_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:background="@color/lg_back">

        <ImageView
            android:id="@+id/order_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:scaleType="fitXY"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的订单"
            android:textColor="@color/v_bank"
            android:textSize="@dimen/dp_20" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/my_tab_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_rela">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/my_pager_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_tab_order">

    </android.support.v4.view.ViewPager>
</LinearLayout>
