<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.mine.activity.LicenseActivity"
    tools:ignore="MissingDefaultResource">
<!--营业执照认证-->
    <RelativeLayout
        android:id="@+id/lineart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/back_left_blank" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="营业执照认证"
            android:textColor="@color/back"
            android:textSize="@dimen/dp_18" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:textSize="@dimen/dp_14"
        android:textColor="@color/back"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_19"
        android:text="您好，您需要上传您的营业执照照片与扫描件"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_18"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_21"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_delete_jpg_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/im_zz_one"
            android:layout_marginTop="0dp"
            android:text="X"
            android:visibility="gone"
            android:textColor="@color/back"
            android:layout_alignRight="@+id/im_zz_one" />
        <ImageView
            android:id="@+id/im_zz_one"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_130"
            android:src="@mipmap/addphotooen"/>

        <TextView
            android:id="@+id/tv_delete_jpg_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/im_zz_two"
            android:layout_alignParentTop="true"
            android:text="X"
            android:visibility="gone"
            android:textColor="@color/back"
            android:layout_alignRight="@+id/im_zz_two" />
        <ImageView
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_toRightOf="@+id/im_zz_one"
            android:id="@+id/im_zz_two"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_130"
            android:src="@mipmap/addphotooen"/>

    </RelativeLayout>
    <Button
        android:id="@+id/btn_zz_sc"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:text="立即上传"
        android:layout_marginTop="@dimen/dp_200"
        android:textColor="@color/white"
        android:background="@drawable/bg_shapess"
        android:layout_height="@dimen/dp_40" />
</LinearLayout>