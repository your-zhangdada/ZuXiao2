<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.mine.activity.SengfenActivity">
<RelativeLayout
    android:id="@+id/inv_f"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50">
    <ImageView
        android:id="@+id/im_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@mipmap/back_left_blank" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="身份证认证"
        android:textColor="@color/back"
        android:textSize="@dimen/dp_18" />

</RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inv_f">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:text="@string/id_certification" />

            <RelativeLayout
                android:id="@+id/rv_hm"
                android:layout_below="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12">
                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_below="@id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_9">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证姓名："
                        android:textSize="@dimen/dp_14"/>
                    <EditText
                        android:id="@+id/tv_sfname"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_15"
                        android:hint="请输入姓名"
                        style="?android:attr/textViewStyle"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dp_131"
                        android:textSize="@dimen/dp_14"/>
                </RelativeLayout>
                <View
                    android:id="@+id/view1"
                    android:layout_below="@id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back"></View>
                <RelativeLayout
                    android:id="@+id/relative2"
                    android:layout_below="@id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_9">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号码："
                        android:textSize="@dimen/dp_14"/>
                    <EditText
                        android:id="@+id/tv_sfz_hm"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_15"
                        android:hint="请输入省份证号"
                        style="?android:attr/textViewStyle"
                        android:background="@null"
                        android:inputType="number"
                        android:layout_marginLeft="@dimen/dp_131"
                        android:textSize="@dimen/dp_14"/>
                </RelativeLayout>
                <View
                    android:id="@+id/view2"
                    android:layout_below="@id/relative2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back"></View>

                <RelativeLayout
                    android:id="@+id/relative3"
                    android:layout_below="@id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_9">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证地址："
                        android:textSize="@dimen/dp_14"/>
                    <EditText
                        android:id="@+id/tv_sfz_dz"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_15"
                        android:hint="请输入省份证地址"
                        style="?android:attr/textViewStyle"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dp_131"
                        android:textSize="@dimen/dp_14"/>
                </RelativeLayout>
                <View
                    android:id="@+id/view3"
                    android:layout_below="@id/relative3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back"></View>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_hm"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_37"
                    android:drawableLeft="@mipmap/oen"
                    android:text="@string/one" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_one_im"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_one"
                android:layout_marginTop="@dimen/dp_10">

                <ImageView
                    android:id="@+id/im_shenfengoen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/id_im" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_one_im"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_37"
                    android:drawableLeft="@mipmap/two"
                    android:text="@string/two" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_two_im"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_two"
                android:layout_marginTop="@dimen/dp_10">

                <ImageView
                    android:id="@+id/im_shenfengtwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/id_ims" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_two_im"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_37"
                    android:drawableLeft="@mipmap/three"
                    android:text="@string/three_" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rv_three_im"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_three"
                android:layout_marginTop="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/im_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/idim" />

                    <ImageView
                        android:id="@+id/im_sc_zhenmian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_toEndOf="@id/im_id"
                        android:layout_toRightOf="@id/im_id"
                        android:src="@mipmap/three_im" />
                </RelativeLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/bt_id_au"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_three_im"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/present_record_shape"
                android:text="@string/lijiupload"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dp_30"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>