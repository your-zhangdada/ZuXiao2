<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<RelativeLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_128">
    <ImageView
        android:id="@+id/im_iphones"
        android:src="@mipmap/icon"
        android:layout_width="@dimen/dp_146"
        android:layout_height="@dimen/dp_91" />
    <TextView
        android:id="@+id/tv_jx_iphoneX"
        android:layout_toRightOf="@+id/im_iphones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_16"
        android:text="[机型] Apple iphoneX"/>
    <TextView
        android:id="@+id/tv_myj"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_toRightOf="@+id/im_iphones"
        android:layout_below="@+id/tv_jx_iphoneX"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_13"
        android:text="免押金"
        android:gravity="center"
        android:background="@drawable/getcode_shape"
        android:textSize="@dimen/dp_9"/>

    <TextView
        android:id="@+id/tv_yuezu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="日租金：  256.00"
        android:textColor="@color/red"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_below="@+id/tv_myj"
        android:layout_toRightOf="@+id/im_iphones"/>

</RelativeLayout>
</LinearLayout>
