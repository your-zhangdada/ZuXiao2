<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.mine.activity.EducationActivity">
    <RelativeLayout
        android:id="@+id/lineart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/back_left_blank" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="学厉认证"
            android:textColor="@color/back"
            android:textSize="@dimen/dp_18" />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/lineart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/lin_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="@dimen/dp_12"
                    android:text="您好，您正在进行学历认证，请根据据示完成认证吧！"/>
                <View
                    android:id="@+id/school_view"
                    android:layout_below="@id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back">
                </View>
                <RelativeLayout
                    android:id="@+id/school_relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学校名称:"
                        android:textSize="@dimen/dp_14"/>
                    <EditText
                        android:id="@+id/tv_xueli_name"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_15"
                        android:hint="请输入学校名称"
                        style="?android:attr/textViewStyle"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dp_99"
                        android:textSize="@dimen/dp_14"/>
                </RelativeLayout>
                <View
                    android:id="@+id/school_view1"
                    android:layout_below="@id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back">
                </View>
                <RelativeLayout
                    android:id="@+id/school_relative2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学籍号码:"
                        android:textSize="@dimen/dp_14"/>
                    <EditText
                        android:id="@+id/tv_xuejihao"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_15"
                        android:hint="请输入学籍号码"
                        style="?android:attr/textViewStyle"
                        android:background="@null"
                        android:inputType="number"
                        android:layout_marginLeft="@dimen/dp_99"
                        android:textSize="@dimen/dp_14"/>
                </RelativeLayout>
                <View
                    android:id="@+id/school_view2"
                    android:layout_below="@id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back">
                </View>
                <RelativeLayout
                    android:id="@+id/school_relative3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所学专业:"
                        android:textSize="@dimen/dp_14"/>
                    <EditText
                        android:id="@+id/tv_xueli_zy"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_15"
                        android:hint="输入所学专业"
                        style="?android:attr/textViewStyle"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dp_99"
                        android:textSize="@dimen/dp_14"/>
                </RelativeLayout>
                <View
                    android:id="@+id/school_view3"
                    android:layout_below="@id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back">
                </View>
                <RelativeLayout
                    android:id="@+id/school_relative4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学籍地址:"
                        android:textSize="@dimen/dp_14"/>
                    <EditText
                        android:id="@+id/tv_xueli_dz"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_15"
                        android:hint="输入学籍地址"
                        style="?android:attr/textViewStyle"
                        android:background="@null"
                        android:layout_marginLeft="@dimen/dp_99"
                        android:textSize="@dimen/dp_14"/>
                </RelativeLayout>
                <View
                    android:id="@+id/school_view4"
                    android:layout_below="@id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bt_regist_back">
                </View>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rv_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin_school"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请上传您的毕业证书照片"
                    android:textSize="@dimen/dp_10" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/im_xueli"
                android:layout_width="@dimen/dp_219"
                android:layout_height="@dimen/dp_159"
                android:layout_below="@id/rv_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/addphotooen" />

            <Button
                android:id="@+id/bt_upload_immediately"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_xueli"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/present_record_shape"
                android:text="提交认证"
                android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>