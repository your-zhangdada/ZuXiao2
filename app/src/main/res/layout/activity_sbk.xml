<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.mine.activity.SBKActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:textColor="@color/back"
            android:text="社保卡认证"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/huise"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:textSize="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_22"
    android:gravity="center_vertical"
    android:textColor="@color/back"
    android:text="您好，您正在进行社保卡信息认证，请根据据示完成认证吧！"/>
<LinearLayout
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_12"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="@dimen/dp_122">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/back"
            android:text="身份证姓名：" />
        <EditText
            android:id="@+id/ed_sf_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="输入姓名"
            android:background="@null"
            android:textSize="@dimen/dp_13"/>
    </LinearLayout>
    <View
        android:background="@color/huise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/back"
            android:text="身份证号码：" />
        <EditText
            android:id="@+id/ed_sfz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="输入省份证号码"
            android:background="@null"
            android:inputType="number"
            android:textSize="@dimen/dp_13"/>
    </LinearLayout>
    <View
        android:background="@color/huise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/back"
            android:text="社保卡号码：" />
        <EditText
            android:id="@+id/ed_sbk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="输入社保卡号"
            android:background="@null"
            android:inputType="number"
            android:textSize="@dimen/dp_13"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/huise"/>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:textSize="@dimen/dp_12"
        android:gravity="center"
        android:text="请上传您的社保卡人相面照片"
        android:layout_marginLeft="@dimen/dp_21"/>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_pz"
            android:layout_width="@dimen/dp_219"
            android:layout_height="@dimen/dp_159"
            android:src="@mipmap/addphotooen"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_tijiao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
       android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:text="提交认证"
        android:textSize="@dimen/dp_12"
        android:textColor="@color/white"
        android:background="@drawable/bg_shapess"
        android:layout_marginTop="@dimen/dp_80"/>
</LinearLayout>