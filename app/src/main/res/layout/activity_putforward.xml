<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.mine.activity.PutforwardActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <LinearLayout
            android:id="@+id/im_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@mipmap/back_left_blank" />
        </LinearLayout>


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现进度"
            android:textColor="@color/back"
            android:textSize="@dimen/dp_18" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/huise"/>
    <RelativeLayout
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">
        <TextView
            android:id="@+id/tv_bankhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:textColor="@color/back"
            android:text="选着银行卡"/>

    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/huise"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp_15"
            android:gravity="center"
            android:text="账户余额："/>
        <TextView
            android:id="@+id/tv_many"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp_15"
            android:gravity="center"
            android:text="1000元"/>

        <TextView
            android:id="@+id/tv_tixian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="全部提现"
            android:singleLine="true"
            android:textColor="@color/fen"
            android:layout_marginLeft="@dimen/dp_150"
            android:textSize="@dimen/dp_15" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/huise"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp_15"
            android:gravity="center"
            android:text="提现金额："/>
        <EditText
            android:id="@+id/ed_many"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp_15"
            android:hint="请输入提现金额"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/huise"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="到账时间：3-5个工作日"
        android:gravity="center_vertical"/>
    <LinearLayout
        android:background="@color/card_shape"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:textColor="@color/fen"
            android:gravity="center_vertical"
            android:text="每天提现金额累计不能超过 1 万"/>
        <Button
            android:id="@+id/btn_tixian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/fen"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18"/>
    </LinearLayout>
</LinearLayout>