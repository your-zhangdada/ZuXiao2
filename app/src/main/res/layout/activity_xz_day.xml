<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/app_same"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/im_fisch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="134dp"
            android:layout_marginLeft="134dp"
            android:text="选择天数"
            android:textSize="@dimen/dp_20" />
        <Button
            android:id="@+id/btn_day"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
           android:background="@color/gb_huangse" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/tv_five"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="@dimen/dp_45"
            android:text="5"
            android:textSize="@dimen/dp_20"
            android:gravity="center"
            android:background="@drawable/present_record_shape"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"></View>
        <TextView
            android:id="@+id/tv_shiday"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="@dimen/dp_45"
            android:text="10"
            android:textSize="@dimen/dp_20"
            android:gravity="center"
            android:background="@drawable/present_record_shape"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"></View>
        <TextView
            android:id="@+id/tv_shiwu_dao"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="@dimen/dp_45"
            android:text="15"
            android:textSize="@dimen/dp_20"
            android:gravity="center"
            android:background="@drawable/present_record_shape"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/tv_threeeday"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="@dimen/dp_45"
            android:text="30"
            android:textSize="@dimen/dp_20"
            android:gravity="center"
            android:background="@drawable/present_record_shape"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"></View>
        <TextView
            android:id="@+id/tv_liuday"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="@dimen/dp_45"
            android:text="60"
            android:textSize="@dimen/dp_20"
            android:gravity="center"
            android:background="@drawable/present_record_shape"/>
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"></View>
        <TextView
            android:id="@+id/tv_shiba_day"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="@dimen/dp_45"
            android:text="180"
            android:textSize="@dimen/dp_20"
            android:gravity="center"
            android:background="@drawable/present_record_shape"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_qita"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_45"
            android:text="其他"
            android:textSize="@dimen/dp_20"
            android:gravity="center"
            android:background="@drawable/present_record_shape"/>
    </LinearLayout>

</LinearLayout>
