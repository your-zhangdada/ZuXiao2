<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commodity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--商品详情-->

    <include
        android:id="@+id/inv_comm"
        layout="@layout/commodity_details_title" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inv_comm">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.youth.banner.Banner
                android:id="@+id/im_iphoneX_bann"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_308"
                android:src="@mipmap/shouji" />

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_16"
                android:id="@+id/relativ_iphonex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/im_iphoneX_bann"
                android:layout_marginLeft="@dimen/dp_13">

                <TextView
                    android:id="@+id/tv_iphoneX"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:text="Apple iphoneX"
                    android:textColor="@color/back"
                    android:textSize="@dimen/dp_18" />

                <TextView
                    android:id="@+id/tv_yuezu"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_iphoneX"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="月租: ¥ 316.00"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/tv_shichangjia"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_iphoneX"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_toRightOf="@+id/tv_yuezu"
                    android:text="市场价: ¥ 8888.00"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/tv_renzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_yuezu"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="现在认证，即刻享受减免押金服务"
                    android:textSize="@dimen/dp_13" />

                <LinearLayout
                    android:id="@+id/linear_xx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_renzheng"
                    android:layout_marginTop="@dimen/dp_14">

                    <TextView
                        android:id="@+id/tv_baoyou"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="包邮"
                        android:textSize="@dimen/dp_10" />

                    <TextView
                        android:id="@+id/tv_chengjialiang"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="成交量：1212"
                        android:textSize="@dimen/dp_10" />

                    <TextView
                        android:id="@+id/tv_fahuodizhi"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="发货地：北京"
                        android:textSize="@dimen/dp_10" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_6"
                    android:layout_below="@id/linear_xx"
                    android:background="@color/view_bg">

                </View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativ_iphonex"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_21">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_phoneYP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机优品"
                        android:textColor="@color/back"
                        android:textSize="@dimen/dp_16" />

                    <TextView
                        android:id="@+id/tv_shengxin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/tv_phoneYP"
                        android:text="省心省钱买好货"
                        android:textSize="@dimen/dp_11" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:id="@+id/im_threee"
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_21"
                        android:src="@mipmap/threee" />

                    <TextView
                        android:id="@+id/tv_day_fahuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text="3天发货"
                        android:textColor="@color/back"
                        android:textSize="@dimen/dp_15" />

                    <ImageView
                        android:id="@+id/im_sezhi"
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_21"
                        android:layout_marginLeft="@dimen/dp_37"
                        android:src="@mipmap/sezhi" />

                    <TextView
                        android:id="@+id/tv_sezhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:text="15天内免费维修"
                        android:textSize="@dimen/dp_15" />

                    <ImageView
                        android:id="@+id/im_baoyou"
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_21"
                        android:layout_marginLeft="@dimen/dp_35"
                        android:src="@mipmap/baoyou" />

                    <TextView
                        android:id="@+id/tv_baoy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_0_5"
                        android:text="包邮"
                        android:textSize="@dimen/dp_15" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view_relat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_6"
                android:layout_below="@id/relat"
                android:background="@color/view_bg" />

            <LinearLayout
                android:id="@+id/linear_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_relat"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/shopmessage_linear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/shopmessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品详情"
                            android:textColor="@color/back"
                            android:textSize="@dimen/sp_22"/>
                        <TextView
                            android:id="@+id/shopmessage_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="------------"
                            android:visibility="gone"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/usermessage_linear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/usermessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="用户评价"
                            android:textColor="@color/back"
                            android:textSize="@dimen/sp_22"/>
                        <TextView
                            android:id="@+id/usermessage_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="------------"
                            android:visibility="gone"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/changjianwenti_linear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/changjianwenti"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="常见问题"
                            android:textColor="@color/back"
                            android:textSize="@dimen/sp_22"/>
                        <TextView
                            android:id="@+id/changjianwenti_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="------------"
                            android:visibility="gone"/>
                    </LinearLayout>

                </LinearLayout>
                <FrameLayout
                    android:id="@+id/shopmessageframelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></FrameLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/linear_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <ImageView
                    android:id="@+id/im_kefu"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_7"
                    android:src="@mipmap/baoyou" />

                <TextView
                    android:id="@+id/tv_kefu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/im_kefu"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="客服"
                    android:textColor="@color/back" />

                <ImageView
                    android:id="@+id/im_dianpu"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_104"
                    android:layout_marginTop="@dimen/dp_7"
                    android:src="@mipmap/baoyou" />

                <TextView
                    android:id="@+id/tv_dianpu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/im_dianpu"
                    android:layout_marginLeft="@dimen/dp_104"
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="店铺"
                    android:textColor="@color/back" />

                <Button
                    android:id="@+id/btn_jiaru_car"
                    android:layout_width="@dimen/dp_108"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_28"
                    android:layout_toRightOf="@+id/im_dianpu"
                    android:background="@color/gb_huangse"
                    android:text="加入购物车"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_15" />

                <Button
                    android:id="@+id/btn_mashang_yy"
                    android:layout_width="@dimen/dp_108"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/btn_jiaru_car"
                    android:background="@color/lg_pass"
                    android:text="立即拥有"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_15" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
